library EcdsaAuthorization {
    struct Data {
        uint96 minimumAuthorization;
        uint64 authorizationDecreaseDelay;
    }

    function setMinimumAuthorization(
        Data storage self,
        uint96 _minimumAuthorization
    ) internal {
        self.minimumAuthorization = _minimumAuthorization;
    }


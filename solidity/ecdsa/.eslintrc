{
  "root": true,
  "extends": ["@thesis-co"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["./test/**/*.ts", "hardhat.config.ts"] }
    ],
    "@typescript-eslint/no-use-before-define": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
  "overrides": [
    {
      "files": ["./deploy/**"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
